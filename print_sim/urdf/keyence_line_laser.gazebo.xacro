<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="keyence_line_laser">
  <!-- Parameter für den Sensor -->
  <xacro:macro name="keyence_line_laser" params="parent_link">
    <link name="keyence_line_laser_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <!-- Ein einfacher Quader als Gehäuse -->
          <box size="0.1 0.05 0.03"/>
        </geometry>
        <material>
          <color rgba="0.5 0.5 0.5 1"/>
        </material>
      </visual>
    </link>

    <joint name="keyence_line_laser_joint" type="fixed">
      <parent link="${parent_link}"/>
      <child link="keyence_line_laser_link"/>
      <origin xyz="0 0 0.1" rpy="0 0 0"/> <!-- Position relativ zum Parent-Link -->
    </joint>

    <!-- Gazebo Plugin für Linienlaser -->
    <gazebo reference="keyence_line_laser_link">
      <sensor type="ray" name="keyence_line_laser">
        <pose>0 0 0 0 0 0</pose>
        <ray>
          <scan>
            <horizontal>
              <samples>720</samples> <!-- Anzahl der Strahlen -->
              <resolution>1</resolution>
              <min_angle>-0.785398</min_angle> <!-- -45 Grad -->
              <max_angle>0.785398</max_angle> <!-- 45 Grad -->
            </horizontal>
          </scan>
          <range>
            <min>0.01</min> <!-- Minimaler Messbereich -->
            <max>0.8</max> <!-- Maximaler Messbereich -->
          </range>
        </ray>
        <plugin name="gazebo_ros_laser" filename="libgazebo_ros_laser.so">
          <topic_name>/keyence_line_laser/scan</topic_name>
          <frame_name>keyence_line_laser_link</frame_name>
        </plugin>
      </sensor>
    </gazebo>
  </xacro:macro>
</robot>
