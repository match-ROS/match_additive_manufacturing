<launch>
    <arg name="initial_path_index" default="0" />
    <arg name="path_ns" default="" doc="Namespace prefix for MIR/UR path topics (with or without leading slash)." />
    <arg name="path_ns_prefix" default="$(eval '/' + path_ns.strip('/') if path_ns else '')" />
    <arg name="mir_path_topic" default="$(arg path_ns_prefix)/mir_path_transformed" />
    <arg name="ur_path_topic" default="$(arg path_ns_prefix)/ur_path_transformed" />

    <node name="target_broadcaster" pkg="print_hw" type="target_broadcaster.py" output="screen">
        <param name="initial_path_index" value="$(arg initial_path_index)" />
        <param name="mir_path_topic" value="$(arg mir_path_topic)" />
        <param name="ur_path_topic" value="$(arg ur_path_topic)" />
        <param name="path_ns_prefix" value="$(arg path_ns_prefix)" />
    </node>

</launch>